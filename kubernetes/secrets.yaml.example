# Example secrets file - DO NOT COMMIT ACTUAL SECRETS
# Copy this to secrets.yaml and fill in actual values
# Then apply: kubectl apply -f kubernetes/secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: abc-secrets
  namespace: abc-intelligence
type: Opaque
stringData:
  # Security
  FLASK_SECRET_KEY: "changeme-in-production"
  JWT_SECRET_KEY: "changeme-in-production"
  DASHBOARD_SECRET_KEY: "changeme-in-production"
  # Database
  POSTGRES_USER: "abc"
  POSTGRES_PASSWORD: "changeme-in-production"
  # Neo4j
  NEO4J_PASSWORD: "changeme-in-production"
  # Foundry (optional)
  FOUNDRY_TOKEN: ""

